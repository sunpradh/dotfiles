# Zathura document viewer config file

#
# General options
#
set selection-clipboard clipboard
set window-title-basename true
set statusbar-basename true
set incremental-search true

#
# SyncTeX with neovim-remote
#
set synctex true
set synctex-editor-command  "nvr --remote-silent %f -c %l"

#
# Aestetic options
#

set font "Fira Sans 10"

# colors inspired by the gruvbox theme
set default-bg                  "#1d2021"
set default-fg                  "#ebdbb2"

set statusbar-bg                "#1d2021"
set statusbar-fg                "#ebdbb2"

set inputbar-bg                 "#1d2021"
set inputbar-fg                 "#ebdbb2"
#
set notification-bg             "#ebdbb2"
set notification-fg             "#1d2021"

set notification-error-bg       "#cc241d"
set notification-error-fg       "#1d2021"

set notification-warning-bg     "#d79921"
set notification-warning-fg     "#1d2021"

set highlight-color             "#b48ead"
set highlight-active-color      "#d79921"

set completion-bg               "#1d2021"
set completion-fg               "#ebdbb2"

set completion-highlight-fg     "#1d2021"
set completion-highlight-bg     "#d79921"

set recolor-lightcolor          "#1d2021"
set recolor-darkcolor           "#ebdbb2"

set recolor                     "false"
set recolor-keephue true


map [normal] P feedkeys <F5>
map [presentation] P feedkeys <F5>
map [normal] <A-c> exec "sh -c 'auto-crop-zathura \"$FILE\"'"
map [normal] <A-f> exec "firefox %"
map [normal] <A-o> exec "sh -c 'caja $(dirname $FILE)'"
map [normal] <A-x> exec "sh -c 'caja $(dirname $FILE)'"
map <F10> set 'default-bg "#ffffff"'
map <F9>  set 'first-page-column 1:1'
map [normal] <A-r> feedkeys <F9><F10><F11><C-n>da
