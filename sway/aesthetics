#------------------------------
# A E S T H E T I C S
#------------------------------

# Font
font pango:Input Sans Condensed, Condensed 13px

# Window borders settings
default_border pixel 2

# Gaps
gaps              inner 0
smart_gaps        on
smart_borders     on
hide_edge_borders smart

# No focus following mouse
focus_follows_mouse no

# Carbonfox theme
set $bg     #161616
set $fg     #f2f4f8
set $red    #ee5396
set $green  #25be6a
set $yellow #08bdba
set $blue   #78a9ff
set $purple #be95ff
set $aqua   #33b1ff
set $white  #dfdfe0
set $gray   #282828

#class                  border  backgr  text    indicator  child_border
client.focused          $white  $white  $bg     $purple    $white
client.focused_inactive $gray   $gray   $fg     $aqua      $gray
client.unfocused        $gray   $gray   $white  $aqua      $gray
client.urgent           $red    $red    $bg     $red       $red

# GTK Section
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme    'Matcha-dark-pueril'
    gsettings set $gnome-schema icon-theme   'matefaenzadark'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name    'Input Sans Condensed, Condensed 12px'
}

# Wallpaper
output "*" bg ~/.wallpaper tile #000000

# Use waybar instead of swaybar
bar {
    swaybar_command waybar
}

