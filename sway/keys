#------------------------------
# Keyboard shortcuts
#------------------------------

# start a terminal
set $term footclient
bindsym $mod+Return exec $term

# start a program launcher
bindsym $mod+d exec rofi-drun

# search for files
bindsym $mod+f exec rofi-files

# recent files
bindsym $mod+r exec rofi-recent

# applications shortcuts
bindsym $mod+Shift+w exec firefox
bindsym $mod+Shift+f exec $term ranger
bindsym $mod+Shift+x exec caja
bindsym $mod+Shift+e exec thunderbird
bindsym $mod+Shift+s exec spotify
bindsym $mod+Shift+t exec telegram-desktop
bindsym $mod+Shift+p exec whatsapp-nativefier
bindsym $mod+Shift+v exec pavucontrol
bindsym $mod+Shift+b exec blueman-manager
bindsym $mod+Shift+m exec $term --app-id=floaterm htop
bindsym $mod+Shift+n exec $term --app-id=floaterm nmtui

# Lockscreen
bindsym $mod+Backspace exec swaylock

# Volume
bindsym XF86AudioRaiseVolume exec set-volume up
bindsym XF86AudioLowerVolume exec set-volume down
bindsym XF86AudioMute	     exec set-volume toggle

# Brightness
bindsym XF86MonBrightnessDown exec set-brightness down
bindsym XF86MonBrightnessUp   exec set-brightness up

# Screenshot
bindsym Print exec --no-startup-id sway-screenshot
# the AKKO keyboard does not have Print key but have a calculator key for some reason
bindsym XF86Calculator exec --no-startup-id sway-screenshot

# Shutdown dialog
bindsym $mod+Shift+Backspace exec rofi-logout

# reload the configuration file
bindsym $mod+Ctrl+r reload

# Toggle waybar
bindsym $mod+b exec killall -SIGUSR1 waybar

# Fix monitor orientation
bindsym $mod+Ctrl+d exec switch-displays

# Toggle title bar
bindsym $mod+Ctrl+t border toggle 4

# Toggle laptop monitor
bindsym $mod+Ctrl+m exec reset-monitor


