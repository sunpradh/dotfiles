* {
    backgroundcolor: #1d2021;
    altbackgroundcolor: #282828;
    separatorcolor: #282828;
    scrollbarcolor: #282828;
    foregroundcolor: #ebdbb2;
    foregroundcolorinverse: #1d2021;
    selectioncolor: #98971a;

    border-color: @separatorcolor;
    background-color: @backgroundcolor;
    text-color: @foregroundcolor;
    margin: 0px;
    spacing: 0px;
}

#listview {
    spacing: 0px;
    scrollbar: true;
    padding: 4px;
    dynamic: true;
}

#window {
    background-color: @backgroundcolor;
    border-color: @selectioncolor;
    border: 4;
    border-radius: 6px;
    width: 700px;
}

#mainbox {
    border: 0;
    padding: 0;
    background-color: @backgroundcolor;
}

#element {
    padding: 5px;
    margin: 5px;
    background-color: transparent;
    spacing: 4px;
}

#element-text {
    background-color: transparent;
    text-color: @foregroundcolor;
    padding: 1px;
}

#element-text.selected {
    background-color: transparent;
    text-color: @foregroundcolorinverse;
}

#element-icon {
    background-color: transparent;
    size: 24px;
    padding: 1px;
}

#element.selected {
    background-color: @selectioncolor;
    border-radius: 5px;
    border-color: @separatorcolor;
}

#inputbar {
    border: 0 0 1 0;
    margin: 0;
    spacing: 0;
    border-color: @separatorcolor;
}

#prompt {
    padding: 8;
    background-color: @backgroundcolor;
    border: 0 1 0 0;
}

#entry {
    padding: 8;
}

#scrollbar {
    enabled: false;
}
