#!/bin/sh

# usage: sway-import-gsettings
config="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini"
if [ ! -f "$config" ]; then exit 1; fi

gnome_schema="org.gnome.desktop.interface"
gtk_theme="$(grep 'gtk-theme-name' "$config" | cut -d'=' -f2)"
icon_theme="$(grep 'gtk-icon-theme' "$config" | cut -d'=' -f2)"
cursor_theme="$(grep 'gtk-cursor-theme' "$config" | cut -d'=' -f2)"
font_name="$(grep 'gtk-font-name' "$config" | cut -d'=' -f2)"

echo gsettings set "$gnome_schema" gtk-theme    "'$gtk_theme'"
echo gsettings set "$gnome_schema" icon-theme   "'$icon_theme'"
echo gsettings set "$gnome_schema" cursor-theme "'$cursor_theme'"
echo gsettings set "$gnome_schema" font-name    "'$font_name'"
